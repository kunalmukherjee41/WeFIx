<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/bar_layout" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:background="@color/colorAccent" />

                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="22dp">

                    <TextView
                        android:id="@+id/tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/aclonica"
                        android:text="Create New Account"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tag"
                        android:layout_marginTop="35dp"
                        android:text="Name"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="90dp"
                        android:autofillHints=""
                        android:background="@drawable/custom_edittext"
                        android:drawableStart="@drawable/name_asset"
                        android:hint="Name"
                        android:inputType="text"
                        android:padding="10dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tag"
                        android:layout_marginTop="115dp"
                        android:text="Email"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="170dp"
                        android:autofillHints=""
                        android:background="@drawable/custom_edittext"
                        android:drawableStart="@drawable/username_asset"
                        android:hint="Usersname"
                        android:inputType="textEmailAddress"
                        android:padding="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="225dp"
                        android:text="Password"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="250dp"
                        android:autofillHints=""
                        android:background="@drawable/custom_edittext"
                        android:drawableStart="@drawable/password_asset"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:padding="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tag"
                        android:layout_marginTop="275dp"
                        android:text="Phone"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="330dp"
                        android:autofillHints=""
                        android:background="@drawable/custom_edittext"
                        android:drawableStart="@drawable/phone_asset"
                        android:hint="Phone"
                        android:inputType="phone"
                        android:padding="10dp" />

                    <Button
                        android:id="@+id/create_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="390dp"
                        android:background="@drawable/custom_btn"
                        android:text="Create User"
                        android:textAllCaps="false"
                        android:textSize="18sp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="490dp"
                    android:background="#c1cccccc"
                    android:orientation="horizontal"
                    android:padding="13dp">

                    <TextView
                        android:id="@+id/forgot_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:text="Forgot Password?"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                    <!--                                <view-->
                    <!--                                    android:layout_width="1dp"-->
                    <!--                                    android:layout_height="30dp"-->
                    <!--                                    android:layout_marginLeft="10dp"/>-->

                    <TextView
                        android:id="@+id/login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="Login Page"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>